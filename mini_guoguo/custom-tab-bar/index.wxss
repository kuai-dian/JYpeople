/* tabBar总体 */
.tab-bar{
  position: fixed;
  bottom: 0;
  width: 100%;
  height:104rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 1px 14px 2px rgba(241,241,241,0.8);
}
/* 图标+文字总体 */
.tab-bar-index{
  display: inline-block;
}
/* 在线客服图标与文字总体 */
.tab-bar-index-add{
  position: fixed;
  bottom: 20rpx;
  right: 40rpx;
  font-size: 40rpx;
  z-index: 9999;
  width:148rpx;
  height:148rpx;
  background:rgba(39,164,255,1);
  border-radius:50%;
}
.tab-bar-icon_add{
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
} 
