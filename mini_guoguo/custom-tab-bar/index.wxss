/* tabBar总体 */
.tab-bar{
  border-top:#ccc;
  position: fixed;
  bottom: 0;
  width:100%;
  height:104rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 20px 10px rgba(175, 175, 175, 0.8);
  display: flex;
  flex-direction: row;
  justify-content: center;
}
/* 图标+文字总体 */
.tab-bar-index{
  height: 104rpx;
  width:33.33%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding-top:14rpx;
}
.tab-bar-icon{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 74rpx;
}
.tab-bar-img{
  width:34rpx;
  height:34rpx;
}
.tab-bar-text{
  font-size:36.75rpx;
}
/* 在线客服图标与文字总体 */
.tab-bar-index-add{
  position: fixed;
  bottom: 20rpx;
  right: 40rpx;
  font-size: 40rpx;
  z-index: 9999;
  width:148rpx;
  height:148rpx;
  background:rgba(39,164,255,1);
  border-radius:50%;
}
.tab-bar-icon_add{
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
} 

 /* 在线客服图标 */
.tab-bar-img-add{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
} 
/* 在线文字客服 */
.tab-bar-text4{
  display: inline-block;
  margin: 0  auto;
  font-size: 12px;
  color: #fff;
} 