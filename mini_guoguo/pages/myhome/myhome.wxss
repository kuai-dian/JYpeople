@import "../../icon/iconfont.wxss";

/* 个人中心头部总体布局 */ 
.personal-header{
  position: fixed;
  width:100vw;
  height:450rpx;
  background:linear-gradient(191deg,rgba(47,195,255,1) 0%,rgba(10,148,255,1) 40%,rgba(1,136,251,1) 68%);
}

/* 头部整体布局 */
.header-box{
  width: 100vw;
  height:450rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  text-align: center;
  transform: translate(-50%,-50%);
}

/* 头像总体 */
.portrait-box{
  position: absolute;
  display: flex;
  left: 20%;
  top: 50%;
  text-align: center;
  transform: translate(-50%,-50%);
  width:156rpx;
  height:156rpx;
  background:rgba(236,247,255,1);
  border:8rpx solid rgba(78,175,254,1);
  border-radius:50%;
}
.portrait-box image{
  width:100%;
  height:100%;
  border-radius:50%;
}

/* 头部文字总体 */
.Text-box{
  position: absolute;
  left: 47%;
  top: 55%;
  text-align: center;
  transform: translate(-50%,-50%);
  width:100%;
  height:156rpx;
}
.portrait-text{
  width:158rpx;
  height:38rpx;
  font-size:20px;
  font-family:Adobe Heiti Std;
  font-weight:normal;
  color:rgba(255,255,255,1);
}
.Data{
  width:100%;
  height:24rpx;
  position: absolute;
  left: 60%;
  top: 55%;
  text-align: center;
  transform: translate(-50%,-50%);
}
.Data-text{
  width:100%;
  height:24rpx;
  font-size:12px;
  font-family:Adobe Heiti Std;
  font-weight:normal;
  color:rgba(255,255,255,1);
}

/* 裹裹余额总体 */
.examine-balance{
  position: relative;
  left: 50%;
  top: 90%;
  text-align: center;
  transform: translate(-50%,-50%);
  width:670rpx;
  height:146rpx;
  background:rgba(255,255,255,1);
  box-shadow:1px 4px 13px 2px rgba(241,241,241,1);
  border-radius:15px;
}

/* 砖石图标 */
.masonry-image{
  position: absolute;
  left: 10%;
  top: 50%;
  transform: translate(-50%,-50%);
  width:80rpx;
  height:68rpx;
}
.masonry{
  width:80rpx;
  height:68rpx;
}

/* 裹裹余额？ */
.balance{
  width:158rpx;
  height:34rpx;
  font-size:17px;
  font-family:Adobe Heiti Std;
  font-weight:normal;
  color:rgba(0,0,0,1);
}

.guoguo-balance{
  position: relative;
  left: 31%;
  top: 40%;
  transform: translate(-50%,-50%);
}
.guoguo-text{
  position: absolute;
  left: 40%;
  top: 67%;
  transform: translate(-50%,-50%);
}
.balance-text{
  width:284rpx;
  height:20rpx;
  font-size:10px;
  font-family:Adobe Heiti Std;
  font-weight:normal;
  color:rgba(85,85,85,1);
}

/* 领裹裹按钮 */
.button{
  position: absolute;
  left: 80%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.button button{
  width:188rpx;
  height:58rpx;
  background:linear-gradient(-85deg,rgba(255,107,51,1) 0%,rgba(255,170,51,1) 100%);
  border-radius:13px;
}
.neck-botton{
  position: absolute;
  right: 4px;
  width:188rpx;
  height:26rpx;
  font-size:13px;
  font-family:Adobe Heiti Std;
  font-weight:normal;
  color:rgba(255,255,255,1);
}
.GuoGuo-you{
  width: 3px;
  height: 4px;
}
 /* 个人中心整体布局 */
 .personal-container {
    display: flex;
    height: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 500rpx 0;
    background: #F9F9F9;
} 

