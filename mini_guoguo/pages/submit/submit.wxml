<view>


  <!-- navigation导航 -->
  <view class="top">
    <view class="topBackground"></view>
    <view class="topNavigation">
      <image bindtap="backIndex" class="topBackIcon" mode="widthFix" src="./back.png"></image>
      <text>发布订单</text>
    </view>
    <input class="topInput" placeholder="请输入运单号"></input>
  </view>


  <!-- 内容填写区域 -->
  <view class="dataInput">
    <textarea name="" bindinput="" class="dataTxetarea" placeholder="请输入取件短信内容"></textarea>
    <input name="" bindinput="" class="datanNameAndAddress" placeholder="收件人姓名"></input>
    <input name="" bindinput="" class="datanNameAndAddress" placeholder="收货地点"></input>
    <button class="dataBtn">提交订单</button>
  </view>


  <!-- 广告位 -->
  <view class="main-adv">
    <swiper circular="true" indicator-dots="true" autoplay="true" class="swiperMain">
      <swiper-item class="swiperItem" wx:for="{{imgList}}" wx:key="{{index}}">
        <navigator>
          <image class="swiperImage" mode="widthFix" src="{{imgList[index].banner}}"></image>
        </navigator>
      </swiper-item>
    </swiper>
  </view>
    
</view>
