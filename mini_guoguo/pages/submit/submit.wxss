/* pages/submit/submit.wxss */
/* 顶部、信息填写和广告位都用的fixed定位 */
/* 页面顶部 */
.topBackground{
  width:100%;
  background:linear-gradient(180deg,lightblue 0%,rgb(121, 166, 238) 20%,rgba(255,255,255,1) 60%);
  height: 100vh;
}
/* 信息输入 */
.dataInput{
  width:84%;
  margin-right:8%;
  margin-left:8%;
  height:677rpx;
  position: fixed;
  z-index:100;
  margin-top:24rpx;
}
.dataTxetarea{
  box-shadow: 0 0 20 #ccc;
  background: #fff;
  width:96%;
  height:282rpx;
  padding-top:18rpx;
  padding-left:28rpx;
  font-size:34rpx;
  border-radius: .5rem;
  margin-top: 24rpx;
}
.datanNameAndAddress{
  background: #fff;
  box-shadow: 0 0 20 #ccc;
  width:96%;
  height:85rpx;
  line-height: 85rpx;
  padding-left:28rpx;
  margin-top:24rpx;
  font-size:34rpx;
  border-radius: .5rem;
}
.dataBtn{
  width:100%;
  height:98rpx;
  line-height: 98rpx;
  color:white;
  background: #27A4FF;
  margin-top:30rpx;
  font-size:38rpx;
}


/* 广告位 */
.main-adv{
  position:fixed;
	width:84%;
	height:221.73rpx;
	border-radius:14rpx;
	margin:0 auto;
  z-index:100;
  margin-top:1000rpx;
  margin-left:8%;
  margin-right:8%;
}
.swiperMain{
	height:221.73rpx;
	border-radius:14rpx;
	overflow: hidden;
}