/* pages/myPackage/myPackage.wxss */
.Main{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width:90%;
  height:200rpx;
  background:rgb(238, 233, 233);
  box-shadow:0px 1px 14px 2px rgba(241,241,241,0.7);
  border-radius:8px;
  margin:10rpx auto;
}
.mainImg{
  width:20.25%;
  height:130rpx;
  overflow: hidden;
}
.mainImg image{
  width:100%;
}
.mainDetail{
  width:70%;
  height:130rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size:28rpx;
}
.mainDetail-yundan{
  width:100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.top{
  display: flex;
  position:fixed;
  z-index:100;
  background: white;
  border:1px solid #ccc;
  border-radius:10rpx;
  width:100%;
  height:80rpx;
  padding-bottom:20rpx;
}
.topLeft{
  font-size:46rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.topRight{
  font-size:32rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  margin-left:10rpx;
}