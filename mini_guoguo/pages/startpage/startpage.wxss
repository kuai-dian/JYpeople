/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.appInfo{
  text-align: center;
}
.appInfo view{
  color: #555;
  line-height: 5rem;
}
.usermotto{
  width: 260px;
  line-height: 1.8rem;
  border-top: 1px solid #fafafa;
  padding-top: 1rem;
  margin-bottom: 4rem;
}
.user-motto{
  font-weight: 900;
}
.container{
  height: 80vh;
}
.userinfo{
  display: block;
}